{
  "extends": ["eslint:recommended"],
  "plugins": [ "mocha" ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unreachable": "error",
    "eqeqeq": "warn",
    "mocha/no-exclusive-tests": "warn",
    "no-unused-vars": [ "error", { "varsIgnorePattern": "_" } ]
  }
}
